# ============================================
# Laravel + Inertia + React + Vite
# Gitignore Profesional
# ============================================

# Node
node_modules/
npm-debug.log
yarn-error.log

# Composer
vendor/

# Laravel Storage (ignoramos contenido, NO carpetas)
storage/*.key
storage/app/*
storage/framework/cache/*
storage/framework/sessions/*
storage/framework/views/*
storage/logs/*

# Permitimos subcarpetas necesarias
!storage/app/public/
!storage/framework/cache/
!storage/framework/sessions/
!storage/framework/views/
!storage/logs/

# Permitimos gitignore internos
!storage/app/public/.gitignore
!storage/framework/cache/.gitignore
!storage/framework/sessions/.gitignore
!storage/framework/views/.gitignore
!storage/logs/.gitignore

# Vite
public/hot
public/build/
public/storage/

# Environment
.env
.env.*
!.env.example

# IDE
.vscode/
.idea/

# Sistemas operativos
.DS_Store
Thumbs.db

# PHPUnit
.phpunit.result.cache

# Builds genéricos
dist/
build/

# Logs raíz
*.log

# Archivos temporales
*.bak
*.old
*.zip
*.tar

# ============================================
# Docker
# ============================================
# NO ignorar docker-compose.yml (lo usás en local + Render)
# NO ignorar docker/
